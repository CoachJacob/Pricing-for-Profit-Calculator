    <script>
        // CALCULATOR FUNCTIONALITY
        const expensesInput = document.getElementById('expenses');
        const desiredIncomeInput = document.getElementById('desiredIncome');
        const numberOfSalesInput = document.getElementById('numberOfSales');
        const priceDisplay = document.getElementById('priceDisplay');
        const breakdown = document.getElementById('breakdown');
        const expensesBreakdown = document.getElementById('expensesBreakdown');
        const incomeBreakdown = document.getElementById('incomeBreakdown');
        const totalBreakdown = document.getElementById('totalBreakdown');
        const salesBreakdown = document.getElementById('salesBreakdown');

        function formatCurrency(value) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            }).format(value);
        }

        function calculatePrice() {
            const expenses = parseFloat(expensesInput.value) || 0;
            const income = parseFloat(desiredIncomeInput.value) || 0;
            const sales = parseFloat(numberOfSalesInput.value) || 0;

            if (sales > 0) {
                const price = (expenses + income) / sales;
                priceDisplay.textContent = formatCurrency(price);
            } else {
                priceDisplay.textContent = '$0.00';
            }

            // Show breakdown if any value is entered
            if (expenses > 0 || income > 0 || sales > 0) {
                breakdown.style.display = 'block';
                expensesBreakdown.textContent = formatCurrency(expenses);
                incomeBreakdown.textContent = formatCurrency(income);
                totalBreakdown.textContent = formatCurrency(expenses + income);
                salesBreakdown.textContent = sales || 0;
            } else {
                breakdown.style.display = 'none';
            }
        }

        // Add event listeners
        expensesInput.addEventListener('input', calculatePrice);
        desiredIncomeInput.addEventListener('input', calculatePrice);
        numberOfSalesInput.addEventListener('input', calculatePrice);

        // Initial calculation
        calculatePrice();
    </script>
